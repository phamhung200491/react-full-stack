<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Get CRUD</title>
        <!-- Latest compiled and minified CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet">

        <!-- Latest compiled JavaScript -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        .btn-edit{
                background: orange;
    border: none;
    outline: none;
    height: 25px;
    width: 60px;
    border-radius: 3px;
    cursor: pointer;
        }

        .btn-delete{
                background: red;
    border: none;
    outline: none;
    height: 25px;
    width: 60px;
    border-radius: 3px;
    cursor: pointer;
        }
    </style>
    <body>
        <table style="width:100%">
            <tr>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Gender</th>
                <th>Role</th>
                <th>Action</th>
            </tr>

            <% for(let i = 0; i < dataTable.length; i++) { %>
            <tr>
                <td><%= dataTable[i].email %></td>
                <td><%= dataTable[i].firstName %></td>
                <td><%= dataTable[i].lastName %></td>
                <td><%= dataTable[i].address %></td>
                <td><%= dataTable[i].phoneNumber %></td>
                <td><%= dataTable[i].gender %></td>
                <td><%= dataTable[i].role %></td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id%>"
                        class="btn-edit" type="button">Edit</a>
                    <a class="btn-delete" type="button">Delete</a>
                </td>
            </tr>
            <% } %>
        </table>
    </body>
</html>